<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrincipalActivity">

   <!-- <android.widget.RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">&ndash;&gt;-->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/tvTestAgend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_alignParentBottom="true"
            android:layout_marginBottom="110dp"
            android:layout_toEndOf="@+id/tvMedicament"
            android:text="Testar agenda" />

        <TextView
            android:id="@+id/tvTestCalendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_alignEnd="@+id/tvMedic2"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="119dp"
            android:text="Testar calendario" />

        <TextView
            android:id="@+id/tvTestCamera"
            android:layout_width="99dp"
            android:layout_height="20dp"


            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/tvTitleIndex"
            android:layout_marginBottom="150dp"
            android:text="Testar camera" />

        <TextView
            android:id="@+id/tvTitleIndex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Med4U"
            android:textAlignment="center"
            android:textSize="90px" />

        <ImageView
            android:id="@+id/ivMedicament"
            android:layout_width="83dp"
            android:layout_height="71dp"

            android:layout_alignStart="@+id/tvTitleIndex"
            android:layout_alignTop="@+id/ivPharm"
            android:src="@drawable/buscamedicamento" />

        <Button
            android:id="@+id/btLoginPrincipal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"

            android:layout_marginBottom="46dp"

            android:text="Login" />

        <ImageView
            android:id="@+id/ivPharm"
            android:layout_width="83dp"
            android:layout_height="71dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"

            android:layout_marginBottom="189dp"

            android:src="@drawable/iconpharm" />

        <ImageView
            android:id="@+id/ivMedic"
            android:layout_width="83dp"
            android:layout_height="71dp"


            android:layout_alignEnd="@+id/tvTitleIndex"
            android:layout_alignTop="@+id/ivMedicament"
            android:src="@drawable/iconmedico" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="219dp"
            android:layout_height="146dp"
            android:layout_below="@+id/tvTitleIndex"
            android:layout_centerHorizontal="true"

            android:src="@drawable/iconbluehealth" />

        <TextView
            android:id="@+id/tvPrincipal01"
            android:layout_width="85dp"
            android:layout_height="18dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"

            android:layout_marginTop="217dp"

            android:text="Busque aqui" />

        <TextView
            android:id="@+id/tvMedicament"
            android:layout_width="99dp"
            android:layout_height="20dp"


            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="Medicamentos" />

        <TextView
            android:id="@+id/tvPharm2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Farmácias" />

        <TextView
            android:id="@+id/tvMedic2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerVertical="true"


            android:layout_toEndOf="@+id/imageView5"
            android:text="Médicos" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
