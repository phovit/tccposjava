<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CadReceitaActivity"
        tools:menu="menu_principal">

        <LinearLayout
            android:layout_width="366dp"
            android:layout_height="506dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="9dp">


            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="146dp"
                android:layout_alignParentTop="true"

                android:layout_centerHorizontal="true"
                android:src="@drawable/iconbluehealth" />

            <TextView
                android:id="@+id/tvTitlefindMedicines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cadastro - Receita"
                android:textAlignment="center"
                android:textSize="50px" />

            <EditText
                android:id="@+id/edCadRecCid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="CID"
                android:inputType="textPersonName"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/edCadRecNameDoc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Nome do médico"
                android:inputType="textPersonName"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/etCadRecNameMed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Medicamento"
                android:inputType="textPersonName"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/edCadRecPresc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Prescrição"
                android:inputType="textPersonName"
                android:textAlignment="center" />

            <Button
                android:id="@+id/btSaveRec"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:text="Salvar" />

            <Button
                android:id="@+id/btEditRec"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:text="Editar" />


        </LinearLayout>

    </android.support.constraint.ConstraintLayout>
</ScrollView>